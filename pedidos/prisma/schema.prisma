generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String  @id @default(uuid())
  externalId String // id do cliente,
  email      String  @unique
  Order      Order[]

  @@map("customers")
}

model Product {
  id         String       @id @default(uuid())
  externalId String
  code       String
  OrderItems OrderItems[]

  // nome da tabela
  @@map("products") //tem q ter o mesmo nome da tabela criada em ambos os servi√ßos
}

model Order {
  id         String       @id @default(uuid())
  customer   Customer     @relation(fields: [customerId], references: [id])
  createdAt  DateTime     @default(now())
  customerId String
  OrderItems OrderItems[]
  status     String

  @@map("orders")
}

model OrderItems {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
  quantity  Float
  productId String
  orderId   String

  @@map("orders_items")
}

